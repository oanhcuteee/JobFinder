<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Register.SeekerRegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/imageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:text="@string/register_title_seek1"
                android:textColor="@color/primary_color1"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:text="@string/register_title_seek2"
                android:textColor="@color/primary_color1"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:text="@string/note_register"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey_hint_ForgotPass"
                android:textSize="14sp"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollWrapField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageSection"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="35dp"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/fieldSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/NameInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/seek_name"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeErrorColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:startIconDrawable="@drawable/ic_name24px">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/seekName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_background"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="50dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- gạch dưới -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PhoneInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/seek_phone"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeErrorColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:startIconDrawable="@drawable/ic_hotline24px">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/seek_phonenums"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_background"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:paddingStart="50dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- gạch dưới -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/rec_address"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeErrorColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:startIconDrawable="@drawable/ic_address_24px">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/seekAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_background"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="50dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- gạch dưới -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintUsername"
                    app:boxStrokeColor="@color/black"
                    app:boxStrokeErrorColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:startIconDrawable="@drawable/ic_email24px">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/seekEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_background"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="50dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- gạch dưới -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintPassword"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeErrorColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_password24px">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/transparent_background"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="50dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="36dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <!-- gạch dưới -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/rePassInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintrePassword"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeErrorColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_password24px">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reEnter_Pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/transparent_background"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingStart="50dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="36dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <!-- gạch dưới -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/returnTologinWrap">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:background="@drawable/splash_btn1"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/register_btn"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/returnTologinWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/return_login"
                android:textColor="@color/primary_color1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/returnbackLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/return_login_seek"
                android:textColor="@color/click_link"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>