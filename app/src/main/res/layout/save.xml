<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hotlineInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hotline"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_hotline24px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rec_hotline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_background"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingStart="50dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- gạch dưới -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taxnumbersInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_taxcode"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_taxcode24px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rec_taxnumbers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_background"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="50dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/BirthdayTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_foundationDay"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        android:layout_marginTop="10dp"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/ic_foundation24px"
        app:endIconDrawable="@drawable/ic_calendar24px">

        <EditText
            android:id="@+id/foundationDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_background"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:maxLines="1"
            android:onClick="showDatePickerDialog"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:paddingStart="50dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/typeBusiInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_typeOfBusiness"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        android:layout_marginTop="10dp"
        app:endIconDrawable="@drawable/ic_dropdown18px"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/ic_selecttype24px">

        <AutoCompleteTextView
            android:id="@+id/selectTypeBusi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_background"
            android:completionThreshold="1"
            android:maxLines="1"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:popupBackground="@color/white"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!-- gạch dưới -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/selectSectorsInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_sectors"
        app:boxStrokeColor="@color/black"
        app:boxStrokeErrorColor="@color/black"
        android:layout_marginTop="10dp"
        app:endIconDrawable="@drawable/ic_dropdown18px"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/ic_sectors24px">

        <AutoCompleteTextView
            android:id="@+id/selectSectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_background"
            android:completionThreshold="1"
            android:maxLines="1"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:popupBackground="@color/white"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <!-- gạch dưới -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>