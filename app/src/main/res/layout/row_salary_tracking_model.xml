<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/bullet_holder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@color/primary_color2"
            >


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_holder"
        android:layout_toEndOf="@+id/bullet_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/work_day_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="99/99/9999"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="top"/>

        <TextView
            android:id="@+id/check_in_out_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="99:99-99:99"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/check_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Late 30 minutes"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/work_day_salary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10000000 vnd"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>